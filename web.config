<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <rule name="ProxyToNode" stopProcessing="true">
          <match url="(.*)" />
          <action type="Rewrite" url="http://localhost:4001/{R:1}" />
        </rule>
      </rules>
    </rewrite>
    <proxy reverseProxy="true" />
    <httpProtocol>
      <customHeaders>
        <add name="X-Forwarded-For" value="{REMOTE_ADDR}" />
        <add name="X-Forwarded-Proto" value="https" />
        <add name="X-Forwarded-Host" value="{HTTP_HOST}" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>
